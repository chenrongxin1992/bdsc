<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>仪器设备</title>
	<meta name="renderer" content="webkit">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<meta name="apple-mobile-web-app-status-bar-style" content="black">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="format-detection" content="telephone=no">
	<link rel="stylesheet" href="../layui/css/layui.css" media="all" />
	<link rel="stylesheet" href="../stylesheets/public.css" media="all" />
</head>
<body class="childrenBody">
	<blockquote class="layui-elem-quote">当前位置：实验室管理 > 仪器设备</blockquote>

	<div class="demoTable">
	  搜索：
	  <div class="layui-inline">
	    <input class="layui-input" name="search" id="search_txt" autocomplete="off">
	  </div>
	  <button class="layui-btn" data-type="getCheckData"  id="addkyxm" style="float: right;">新增</button>
	  <button class="layui-btn" data-type="reload" id="yjfx_btn">搜索</button>
	</div>

	<table id="yqsb_table" lay-filter="yqsb_table"></table>

<script type="text/javascript" src="../layui/layui.js"></script>
<script type="text/javascript">
layui.use(['jquery','table','form'], function(){ 
    let $ = layui.$ //重点处
    let table = layui.table,
    	form = layui.form
    table.render({
	    elem: '#yqsb_table'
	    ,id:'table_yqsb'//重载需要
	    ,cellMinWidth: 80 //全局定义常规单元格的最小宽度，layui 2.2.1 新增
	    ,url: '/manage/yqsb_data' //数据接口
	    ,page: true //开启分页
	    ,cols: [[ //表头
	      {type: 'numbers', title: '序号',width:90,fixed: 'left',align:'center'}
	      ,{field: 'name', title: '名称',align:'center'}
	      ,{field: 'unit', title: '单位', align:'center'}
	      ,{field: 'brand', title: '品牌', align:'center'}
	      ,{field: 'number', title: '编号', align:'center'}
	      ,{field: 'dutyman', title: '负责人', align:'center'}
	      ,{field: 'value', title: '价值', align:'center'}
	      ,{fixed: 'right',title:'操作', align:'center', toolbar: '#yjfxbar'} //这里的toolbar值是模板元素的选择器
	    ]]
	  });
    //数据重载
    $('#yjfx_btn').on('click', function(){
    	table.reload('table_yqsb', {
	        where: {
	            search_txt: $('#search_txt').val()
	        }
	    });
    })
     $('#addkyxm').on('click', function(){
    	console.log('新增仪器设备')
    	let index = layui.layer.open({
            title : "新增仪器设备",
            type : 2,
            content : "yqsbadd",
            success : function(layero, index){
            }
        })
        console.log('index',index)
        layui.layer.full(index);
        $(window).on("resize",function(){
            layui.layer.full(index);
        })
    })
    //监听工具条
	table.on('tool(yqsb_table)', function(obj){ //注：tool是工具条事件名，test是table原始容器的属性 lay-filter="对应的值"
	  var data = obj.data; //获得当前行数据
	  var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
	  var tr = obj.tr; //获得当前行 tr 的DOM对象
	  console.log('dddd')
	  if(layEvent === 'edit'){ //查看
	    //do somehing
	    let index = layui.layer.open({
            title : "查看 | 编辑",
            type : 2,
            content : "yqsbadd?id="+data.id,
            success : function(layero, index){
            }
        })
        console.log('index',index)
        layui.layer.full(index);
        //改变窗口大小时，重置弹窗的宽高，防止超出可视区域（如F12调出debug的操作）
        $(window).on("resize",function(){
            layui.layer.full(index);
        })

        //同步更新缓存对应的值
	    obj.update({
	      username: '123'
	      ,title: 'xxx'
	    });
	  } else if(layEvent === 'del'){ //删除
	    layer.confirm('确定删除吗?',{skin: 'layui-layer-molv' //样式类名
				                     ,closeBtn: 0}, function(index){
	      obj.del(); //删除对应行（tr）的DOM结构，并更新缓存
	      layer.close(index);
	      //向服务端发送删除指令
	       $.ajax({
			  	url:'/manage/yqsbdel',
			  	type:'POST',
			  	data:data,
			  	dataType : "json",
			  	success:function(result){
			  		if(result.code == 0){
			  			console.log('del success')			
			  		}
			  	},
			  	error:function(msg){
			  		console.log('ajax delete error msg',msg)
			  	}
			})
	    });
	  } 
	});
});
</script>
<script type="text/html" id="yjfxbar">
  {{# if('<%-rolename%>' == '管理员'){ }}
		<a class="layui-btn layui-btn-xs" lay-event="edit">查看 | 编辑</a>
		<a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
	{{# }else{ }}
		<a class="layui-btn layui-btn-xs" lay-event="edit">查看</a>
	{{# } }}
</script>
</body>
</html>