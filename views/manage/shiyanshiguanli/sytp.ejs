<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>招聘信息</title>
	<meta name="renderer" content="webkit">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<meta name="apple-mobile-web-app-status-bar-style" content="black">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="format-detection" content="telephone=no">
	<link rel="stylesheet" href="../layui/css/layui.css" media="all" />
	<link rel="stylesheet" href="../stylesheets/public.css" media="all" />
	<style type="text/css">
	.laytable-cell-1-pic{
		height: 100px;
		line-height: 100px;
	}
	</style>
</head>
<body class="childrenBody">
	<blockquote class="layui-elem-quote">当前位置：实验室管理 > 实验室管理 > 首页图片</blockquote>

	<div class="demoTable layui-form">
	  搜索：
	  <div class="layui-inline">
	    <input class="layui-input" name="search" id="search_txt" autocomplete="off">
	  </div>

	  <button class="layui-btn" data-type="reload" id="zpxx_btn">搜索</button>
	  <button class="layui-btn" data-type="getCheckData" style="float: right;" id="sytpadd">新增首页图片</button>
	</div>

	<table id="sytp_table" lay-filter="sytp_table"></table>

<script type="text/javascript" src="../layui/layui.js"></script>
<script type="text/javascript">
layui.use(['jquery','table','form'], function(){ 
    let $ = layui.$ //重点处
    let table = layui.table,
    	form = layui.form
    form.render('select')
    table.render({
	    elem: '#sytp_table'
	    ,id:'table_sytp'//重载需要
	    ,cellMinWidth: 80 //全局定义常规单元格的最小宽度，layui 2.2.1 新增
	    ,url: '/spatial/manage/sytp_data' //数据接口
	    ,page: true //开启分页
	    ,cols: [[ //表头
	      {field: 'id', title: '序号',width:90,align:'center'}
	      ,{field: 'describe', title: '描述',align:'center'}
	      ,{field: 'pic', title: '预览',align:'center',templet:'#sytpimg',style:'cursor: pointer;',event:'preview'}
	      ,{field: 'time', title: '修改时间', align:'center'}
	      ,{title:'操作', align:'center', toolbar: '#yjfxbar'} //这里的toolbar值是模板元素的选择器
	    ]]
	  });
    //数据重载
    $('#zpxx_btn').on('click', function(){
    	table.reload('table_sytp', {
	        where: {
	            search_txt: $('#search_txt').val(),
	            type: $('#type option:selected').val()
	        }
	    });
    })
    $('#sytpadd').on('click', function(){
    	//do somehing
	    let index = layui.layer.open({
            title : "新增首页图片",
            type : 2,
            content : "sytpadd",
            success : function(layero, index){
            }
        })
        layui.layer.full(index);
	        //改变窗口大小时，重置弹窗的宽高，防止超出可视区域（如F12调出debug的操作）
	        $(window).on("resize",function(){
	            layui.layer.full(index);
	        })
    })
    //监听工具条
	table.on('tool(sytp_table)', function(obj){ //注：tool是工具条事件名，test是table原始容器的属性 lay-filter="对应的值"
	  var data = obj.data; //获得当前行数据
	  var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
	  var tr = obj.tr; //获得当前行 tr 的DOM对象
	  console.log('dddd')
	  if(layEvent === 'edit'){ //查看
	    //do somehing
	    var index = layui.layer.open({
            title : "查看 | 编辑",
            type : 2,
            content : "sytpedit?id="+data.id,
            success : function(layero, index){
            }
        })
        console.log('index',index)
        layui.layer.full(index);
        //改变窗口大小时，重置弹窗的宽高，防止超出可视区域（如F12调出debug的操作）
        $(window).on("resize",function(){
            layui.layer.full(index);
        })

        //同步更新缓存对应的值
	    // obj.update({
	    //   username: '123'
	    //   ,title: 'xxx'
	    // });
	  } else if(layEvent === 'del'){ //删除
	    layer.confirm('确定删除吗?',{skin: 'layui-layer-molv' //样式类名
				                     ,closeBtn: 0}, function(index){
	      obj.del(); //删除对应行（tr）的DOM结构，并更新缓存
	      layer.close(index);
	      //向服务端发送删除指令
	       $.ajax({
			  	url:'/spatial/manage/sytpdel',
			  	type:'POST',
			  	data:data,
			  	dataType : "json",
			  	success:function(result){
			  		if(result.code == 0){
			  			console.log('del success')			
			  		}
			  	},
			  	error:function(msg){
			  		console.log('ajax delete error msg',msg)
			  	}
			})
	    });
	  }else if(layEvent === 'up'){
	  	console.log('上移')
	  	console.log('当前tr',tr)
	  	let prev = tr.prev()
	  	console.log('tr前一个元素',tr.prev())
	  	if(tr.index()>0){
	  		tr.insertBefore(prev)
	  	}else{
	  		layer.msg('已经是最顶部了')
	  		return 
	  	}
	  	
	  }else if(layEvent === 'down'){
		let next = tr.next()
	  	if(next.next().html()==null){
	  		layer.msg('已经是最底部了')
	  		return 
	  	}else{
	  		tr.insertAfter(next)
	  	}
	  }else if(layEvent === 'preview'){
	  	console.log('preview')
	  	let src = '/spatial'+ data.pic
	  	layer.photos({ photos: {"data": [{"src": src}]} });
	  	// let index = layui.layer.open({
    //         title : "图片",
    //         type : 2,
    //         content : "/spatial"+data.pic,
    //         success : function(layero, index){
    //         }
    //     })
        // layui.layer.full(index);
        // //改变窗口大小时，重置弹窗的宽高，防止超出可视区域（如F12调出debug的操作）
        // $(window).on("resize",function(){
        //     layui.layer.full(index);
        // })
	  }
	});
});
</script>
<script type="text/html" id="yjfxbar">
  <a class="layui-btn layui-btn-xs" lay-event="up">上移</a>
  <a class="layui-btn layui-btn-xs" lay-event="down">下移</a>
  <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>
<script type="text/html" id="pdftpl">
  <a href='/spatial{{d.pdf}}' class="layui-table-link">{{d.pdfname}}</a>
</script>
<script type="text/html" id="sytpimg">
	<img src="/spatial{{d.pic}}" style="height: 100px;max-width: 100%;" class="previewimg" />
</script>
</body>
</html>