<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>学术委员会</title>
	<meta name="renderer" content="webkit">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<meta name="apple-mobile-web-app-status-bar-style" content="black">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="format-detection" content="telephone=no">
	<link rel="stylesheet" href="../layui/css/layui.css" media="all" />
	<link rel="stylesheet" href="../stylesheets/public.css" media="all" />
	<style type="text/css">
	.btnfloat{
			float: right;
		}
	</style>
</head>
<body class="childrenBody">
	<blockquote class="layui-elem-quote">当前位置：实验室管理 >学术委员会<div id="btnele" style="display: inline;"><button class="layui-btn layui-btn-sm btnfloat" id="editbtn">新增</button></div></blockquote>
	<table id="xueshuweiyuanhui" lay-filter="xueshuweiyuanhui"></table>

	<script type="text/javascript" src="../layui/layui.js"></script>

<script type="text/javascript">
layui.use(['jquery','table','form'], function(){ 
    let $ = layui.$ //重点处
    let table = layui.table,
    	form = layui.form
    table.render({
	    elem: '#xueshuweiyuanhui'
	    ,cellMinWidth: 80 //全局定义常规单元格的最小宽度，layui 2.2.1 新增
	    ,url: '/spatial/manage/xueshuweiyuanhui_data' //数据接口
	    ,page: true //开启分页
	    ,cols: [[ //表头
	      {field: 'id', title: '序号',width:90,fixed: 'left',align:'center'}
	      ,{field: 'name', title: '姓名',align:'center'}
	      ,{field: 'tenure', title: '任职', align:'center'}
	      ,{field: 'titles', title: '职称',align:'center'} 
	      ,{field: 'profession', title: '专业',align:'center'}
	      ,{field: 'prefecture', title: '任期',align:'center'}
	      ,{field: 'workplace', title: '工作单位',align:'center'}
	      ,{fixed: 'right',title:'操作', align:'center', toolbar: '#xueshuweiyuanhuibar'} //这里的toolbar值是模板元素的选择器
	    ]]
	  });

    $('body').on('click', '#editbtn', function() {
    	//新增
    	let index = layui.layer.open({
            title : "新增",
            type : 2,
            content : "xswyhadd",
            success : function(layero, index){
                var body = layui.layer.getChildFrame('body', index);
                //console.log('click data --->',data)
                //body.find('#id').val(data.id)
                //form.render()
                //赋值到内容表单
            }
        })
        layui.layer.full(index);
        //改变窗口大小时，重置弹窗的宽高，防止超出可视区域（如F12调出debug的操作）
        $(window).on("resize",function(){
            layui.layer.full(index);
        })
    })
    //监听工具条
	table.on('tool(xueshuweiyuanhui)', function(obj){ //注：tool是工具条事件名，test是table原始容器的属性 lay-filter="对应的值"
	  var data = obj.data; //获得当前行数据
	  var layEvent = obj.event; //获得 lay-event 对应的值（也可以是表头的 event 参数对应的值）
	  var tr = obj.tr; //获得当前行 tr 的DOM对象
	 
	  if(layEvent === 'edit'){ //查看
	    //do somehing
	    let index = layui.layer.open({
            title : "查看 | 编辑",
            type : 2,
            content : "xueshuweiyuanhuichakan",
            success : function(layero, index){
                var body = layui.layer.getChildFrame('body', index);
                console.log('click data --->',data)
                body.find('#id').val(data.id)
                body.find('#name').val(data.name)
                body.find('#ename').val(data.ename)
                body.find('#titles').val(data.titles)
                body.find('#etitles').val(data.etitles)
                body.find('#tenure').val(data.tenure)
                body.find('#etenure').val(data.etenure)
                body.find('#profession').val(data.profession)
                body.find('#eprofession').val(data.eprofession)
                body.find('#prefecture').val(data.prefecture)
                body.find('#eprefecture').val(data.eprefecture)
                body.find('#workplace').val(data.workplace)
                body.find('#eworkplace').val(data.eworkplace)
                form.render()
                //赋值到内容表单
            }
        })
        console.log('index',index)
        layui.layer.full(index);
        //改变窗口大小时，重置弹窗的宽高，防止超出可视区域（如F12调出debug的操作）
        $(window).on("resize",function(){
            layui.layer.full(index);
        })

        //同步更新缓存对应的值
	    obj.update({
	      username: '123'
	      ,title: 'xxx'
	    });
	  } else if(layEvent === 'del'){ //删除
	    layer.confirm('真的删除行么',{skin: 'layui-layer-molv' //样式类名
				                     ,closeBtn: 0}, function(index){
	      obj.del(); //删除对应行（tr）的DOM结构，并更新缓存
	      layer.close(index);
	      //向服务端发送删除指令
	       $.ajax({
			  	url:'/spatial/manage/xueshuweiyuanhuidel',
			  	type:'POST',
			  	data:data,
			  	dataType : "json",
			  	success:function(result){
			  		if(result.code == 0){
			  			console.log('del success')			
			  		}
			  	},
			  	error:function(msg){
			  		console.log('ajax delete error msg',msg)
			  	}
			})
	    });
	  } 
	});
});
</script>
<script type="text/html" id="xueshuweiyuanhuibar">
  <a class="layui-btn layui-btn-xs" lay-event="edit">查看 | 编辑</a>
  <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
  
  <!-- 这里同样支持 laytpl 语法，如： -->
  {{#  if(d.auth > 2){ }}
    <a class="layui-btn layui-btn-xs" lay-event="check">审核</a>
  {{#  } }}
</script>
</body>
</html>