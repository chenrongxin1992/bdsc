<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>编辑实验室</title>
	<meta name="renderer" content="webkit">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<meta name="apple-mobile-web-app-status-bar-style" content="black">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="format-detection" content="telephone=no">
	<link rel="stylesheet" href="../layui/css/layui.css" media="all" />
	<link rel="stylesheet" href="../stylesheets/public.css" media="all" />
	<style type="text/css">
	#uploadimg{
            position: relative;
		}
		#uploadimg .delete{
			width:32px;
    		height:32px;
    		position:absolute;
    		z-index: 10;
    		left: 290px;
    		
    		cursor:pointer;
		}
		</style>
</head>
<body class="childrenBody">
	<form class="layui-form layui-row layui-col-space10">
		<div class="layui-col-md12 layui-col-xs12">

			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">名称</label>
					<div class="layui-input-inline" style="width: 200px;">
				      <input type="text" name="name" lay-verify="required" autocomplete="off" class="layui-input" id="name" value="<%-data.name%>">
				    </div>
				    <label class="layui-form-label" style="width: 120px;">名称(EN)</label>
				    <div class="layui-input-inline" style="width: 350px;">
				      <input type="text" name="ename"  autocomplete="off" class="layui-input" id="ename" value="<%-data.ename%>">
				    </div>
				</div>
			</div>

			<div class="layui-form-item">
				<label class="layui-form-label">创建时间</label>
				<div class="layui-input-inline" style="width: 200px;">
				<input name="createtime" type="text" class="layui-input" id="createtime" autocomplete="off" value="<%-data.createtime%>">
				</div>
			</div>

			<div class="layui-form-item">
				<label class="layui-form-label">介绍</label>
				<div class="layui-input-block" id="description">
					
				</div>
			</div>

			<div class="layui-form-item">
				<label class="layui-form-label">介绍(EN)</label>
				<div class="layui-input-block" id="edescription">
					
				</div>
			</div>

			<div class="layui-form-item">
			    <label class="layui-form-label" id="">实验室照片</label>
			    <div id="sysimg">
					<% data.picarr.forEach(function(item,index){ %>		
					<div class="layui-input-block" id="uploadimg">
		        		<img src="<%=item%>" style="width:300px;margin-top: 15px;"><img src='/images/button-del.png' class='delete' />
		        	</div>		        	
		        	<% }) %>
		        </div>
	        </div>

			<div class="layui-form-item">
			    <label class="layui-form-label"></label>
			    <div class="layui-input-inline" style="width: 272px;">
				    <button type="button" class="layui-btn" id="upload">
					  <i class="layui-icon">&#xe67c;</i>上传图片
					</button>
				</div> 
	        </div>
			<div class="layui-form-item">
				<hr class="layui-bg-gray" />
				<div class="layui-col-md-offset1">
					<a class="layui-btn layui-btn-sm" lay-filter="update" lay-submit><i class="layui-icon">&#xe609;</i>保存</a>
				</div>
			</div>
		</div>
	</form>

<script type="text/javascript" src="../layui/layui.js"></script>
<script type="text/javascript" src="https://unpkg.com/wangeditor@3.1.1/release/wangEditor.min.js"></script>
<!-- <script type="text/javascript" src="newsAdd.js"></script> -->
<script type="text/javascript">
layui.use(['jquery','layer','form','layedit','laydate','upload'], function(){ 
    let $ = layui.$, //重点处
    	layedit = layui.layedit
    let form = layui.form,layer = layui.layer,laydate=layui.laydate
    let frameindex = parent.layer.getFrameIndex(window.name); //先得到当前iframe层的索引
    console.log('frameindex',frameindex)
    let upload = layui.upload
    let uploadInst = upload.render({
			    elem: '#upload' //绑定元素
			    ,url: '/manage/sysupload' //上传接口
			     ,type: 'iamges' //上传接口
			    ,done: function(res){
			      //上传完毕回调
			      console.log('upload success',res)
			      // if($('#uploadimg').children().length!=0){
			      // 	$('#uploadimg').children().remove()
			      // }
			      let str = "<div class='layui-input-block' id='uploadimg'><img src="+(res.data)[0]+" alt="+(res.returnfilename)[0]+" style='width:300px;margin-top:15px;' title="+(res.returnfilename)[0]+" name="+(res.data)[0]+"> <img src='/images/button-del.png' class='delete' /></div>"
			      $('#sysimg').append(str)
			    }
			    ,error: function(){
			      //请求异常回调
			    }
			  });
    $('body').on('click', '.delete', function() {
		console.log('$(this)',$(this))
		console.log($(this).parent())
		console.log('remove uploadimg')
		//return false
		$(this).parent().remove()
	})

    let id = '<%- data.id %>'
    console.log('id',id)
    laydate.render({
	    elem: '#createtime'
	});
    form.on('submit(update)', function(data){
	  console.log('update data field',data.field);
	  //更新
	  let allimg = $('#sysimg').children(),
	  		allpic = ''
	  //console.log('num of img ',numofimg)
	  allimg.each(function(i,item){
	  	console.log(i,$(item))
	  	console.log($(item).children(':first').attr('src'))
	  	allpic += $(item).children(':first').attr('src') + ';'
	  })
	  allpic = allpic.substring(0,allpic.length-1)
	  console.log(allpic)
	  data.field.id = id
	  data.field.description = editor1.txt.html()
	  data.field.edescription = editor2.txt.html()
	  data.field.pic = allpic
	  console.log('data',data)
	  $.ajax({
	  	url:'/manage/sysedit',
	  	type:'POST',
	  	data:data.field,
	  	dataType : "json",
	  	success:function(result){
	  		if(result.code == 0){
	  			console.log('update success')
	  			//墨绿深蓝风
				let frameindex = layer.alert('更新成功', {
				  skin: 'layui-layer-molv' //样式类名
				  ,closeBtn: 0
				}, function(){
					layer.close(frameindex);
				});	  			
	  		}
	  	},
	  	error:function(msg){
	  		console.log('ajax error msg',msg)
	  	}
	  })
	});

   
	var E = window.wangEditor
    var editor1 = new E('#description'),
    	editor2 = new E('#edescription')
    // 或者 var editor = new E( document.getElementById('editor') )
    editor1.create()
    editor2.create()

    editor1.txt.html('<%- JSON.stringify(data.description).replace(/^\"|\"$/g,'') %>')
    editor2.txt.html('<%- JSON.stringify(data.edescription).replace(/^\"|\"$/g,'') %>')
})
</script>
</body>
</html>